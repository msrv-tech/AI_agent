Процедура ДобавитьЗаписьИзмененногоОбъекта(КонтекстВыполнения, МассивИзмененныхОбъектов, РежимЗаписи, РезультатЗаписи)
	
	Если НЕ КонтекстВыполнения.Свойство("DSL_ТекущийОбъект") Тогда
		Возврат;
	КонецЕсли;
	
	ТекущийОбъект = КонтекстВыполнения.DSL_ТекущийОбъект;
	
	ТипОбъекта = "Неизвестно";
	Если КонтекстВыполнения.Свойство("DSL_ТипОбъекта") Тогда
		ТипОбъекта = КонтекстВыполнения.DSL_ТипОбъекта;
	КонецЕсли;
	
	ИмяОбъекта = "";
	Если КонтекстВыполнения.Свойство("DSL_ИмяОбъекта") Тогда
		ИмяОбъекта = КонтекстВыполнения.DSL_ИмяОбъекта;
	КонецЕсли;
	
	ЭтоНовый = Ложь;
	Если КонтекстВыполнения.Свойство("DSL_НовыйОбъект") Тогда
		ЭтоНовый = КонтекстВыполнения.DSL_НовыйОбъект;
	КонецЕсли;
	
	СсылкаОбъекта = Неопределено;
	Попытка
		СсылкаОбъекта = ТекущийОбъект.Ссылка;
	Исключение
		// Игнорируем ошибки получения ссылки
		ТекстОшибки = ОписаниеОшибки();
	КонецПопытки;
	
	Если (СсылкаОбъекта = Неопределено Или НЕ ЗначениеЗаполнено(СсылкаОбъекта)) И КонтекстВыполнения.Свойство("СсылкаОбъекта") Тогда
		СсылкаОбъекта = КонтекстВыполнения.СсылкаОбъекта;
	КонецЕсли;
	
	СтруктураОбъекта = Новый Структура;
	СтруктураОбъекта.Вставить("object_type", ТипОбъекта);
	СтруктураОбъекта.Вставить("meta_name", ИмяОбъекта);
	СтруктураОбъекта.Вставить("ref", ?(ЗначениеЗаполнено(СсылкаОбъекта), Строка(СсылкаОбъекта), ""));
	
	Попытка
		Если ЗначениеЗаполнено(СсылкаОбъекта) Тогда
			СтруктураОбъекта.Вставить("guid", Строка(СсылкаОбъекта.УникальныйИдентификатор()));
		Иначе
			СтруктураОбъекта.Вставить("guid", "");
		КонецЕсли;
	Исключение
		СтруктураОбъекта.Вставить("guid", "");
	КонецПопытки;
	
	ИзмененныеПоля = Новый Структура;
	Если КонтекстВыполнения.Свойство("DSL_ИзмененныеПоля") Тогда
		Для Каждого ПараКлючЗначение Из КонтекстВыполнения.DSL_ИзмененныеПоля Цикл
			ИзмененныеПоля.Вставить(ПараКлючЗначение.Ключ, СериализоватьДляJSON(ПараКлючЗначение.Значение));
		КонецЦикла;
	КонецЕсли;
	
	ЗаписьИзменения = Новый Структура;
	ЗаписьИзменения.Вставить("operation", ?(ЭтоНовый, "create", "update"));
	ЗаписьИзменения.Вставить("write_mode", РежимЗаписи);
	ЗаписьИзменения.Вставить("object", СтруктураОбъекта);
	ЗаписьИзменения.Вставить("changed_fields", ИзмененныеПоля);
	ЗаписьИзменения.Вставить("write_result", Новый Структура("success, message", РезультатЗаписи.Успех, РезультатЗаписи.Сообщение));
	
	МассивИзмененныхОбъектов.Добавить(ЗаписьИзменения);
	
	Если РезультатЗаписи.Успех Тогда
		КонтекстВыполнения.Вставить("DSL_НовыйОбъект", Ложь);
		КонтекстВыполнения.Вставить("DSL_ИзмененныеПоля", Новый Структура);
	КонецЕсли;
	
