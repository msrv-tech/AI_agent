// Нормализует текст, содержащий JSON, для парсинга:
// - вырезает JSON объект из окружения (markdown/пояснения)
// - заменяет «умные» кавычки на стандартные
// - удаляет строки-комментарии, начинающиеся с //
// - исправляет частые ошибки с булевыми (истина/ложь -> true/false)
//
// Параметры:
//  ИсходныйТекст - Строка - исходный текст
//
// Возвращаемое значение:
//  Строка - нормализованный JSON (может быть пустой строкой)
Функция НормализоватьJSONТекст(ИсходныйТекст) Экспорт
	
	Текст = "";
	Если ИсходныйТекст <> Неопределено Тогда
		Текст = Строка(ИсходныйТекст);
	КонецЕсли;
	
	Текст = СокрЛП(Текст);
	Если ПустаяСтрока(Текст) Тогда
		Возврат "";
	КонецЕсли;
	
	// Убираем блоки ```json ... ``` и ``` ... ```
	Если СтрНайти(Текст, "```json") > 0 Тогда
		Текст = СтрЗаменить(Текст, "```json", "");
		Текст = СтрЗаменить(Текст, "```", "");
	ИначеЕсли СтрНайти(Текст, "```") > 0 Тогда
		Текст = СтрЗаменить(Текст, "```", "");
	КонецЕсли;
	
	Текст = СокрЛП(Текст);
	
	// Вырезаем первый сбалансированный JSON (объект { ... } или массив [ ... ])
	ПозОбъекта = СтрНайти(Текст, "{");
	ПозМассива = СтрНайти(Текст, "[");
	
	НачалоJSON = 0;
	Открывающая = "";
	Закрывающая = "";
	
	Если ПозОбъекта > 0 И ПозМассива > 0 Тогда
		Если ПозОбъекта < ПозМассива Тогда
			НачалоJSON = ПозОбъекта;
			Открывающая = "{";
			Закрывающая = "}";
		Иначе
			НачалоJSON = ПозМассива;
			Открывающая = "[";
			Закрывающая = "]";
		КонецЕсли;
	ИначеЕсли ПозОбъекта > 0 Тогда
		НачалоJSON = ПозОбъекта;
		Открывающая = "{";
		Закрывающая = "}";
	ИначеЕсли ПозМассива > 0 Тогда
		НачалоJSON = ПозМассива;
		Открывающая = "[";
		Закрывающая = "]";
	КонецЕсли;
	
	Если НачалоJSON > 0 Тогда
		
		СчетчикСкобок = 0;
		ВКавычках = Ложь;
		
		Для Позиция = НачалоJSON По СтрДлина(Текст) Цикл
			Символ = Сред(Текст, Позиция, 1);
			
			Если Символ = """" Тогда
				// Не переключаем состояние, если кавычка экранирована (упрощенно)
				Если Позиция > 1 И Сред(Текст, Позиция - 1, 1) <> "\" Тогда
					ВКавычках = НЕ ВКавычках;
				КонецЕсли;
			КонецЕсли;
			
			Если НЕ ВКавычках Тогда
				Если Символ = Открывающая Тогда
					СчетчикСкобок = СчетчикСкобок + 1;
				ИначеЕсли Символ = Закрывающая Тогда
					СчетчикСкобок = СчетчикСкобок - 1;
					Если СчетчикСкобок = 0 Тогда
						Текст = Сред(Текст, НачалоJSON, Позиция - НачалоJSON + 1);
						Прервать;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
		
	КонецЕсли;
	
	// Заменяем все виды "умных" кавычек на стандартные
	Текст = СтрЗаменить(Текст, "«", """");
	Текст = СтрЗаменить(Текст, "»", """");
	Текст = СтрЗаменить(Текст, "“", """");
	Текст = СтрЗаменить(Текст, "”", """");
	Текст = СтрЗаменить(Текст, "„", """");
	
	// Удаляем строки-комментарии // (если они на отдельной строке)
	МассивСтрок = СтрРазделить(Текст, Символы.ПС);
	ТекстБезКомментариев = "";
	Для Каждого СтрокаТекста Из МассивСтрок Цикл
		Если СтрНачинаетсяС(СокрЛП(СтрокаТекста), "//") Тогда
			Продолжить;
		КонецЕсли;
		ТекстБезКомментариев = ТекстБезКомментариев + СтрокаТекста + Символы.ПС;
	КонецЦикла;
	Текст = ТекстБезКомментариев;
	
	// Исправление частых ошибок ИИ с булевыми значениями
	Текст = СтрЗаменить(Текст, ": истина", ": true");
	Текст = СтрЗаменить(Текст, ":истина", ": true");
	Текст = СтрЗаменить(Текст, ": ""истина""", ": true");
	Текст = СтрЗаменить(Текст, ":""истина""", ": true");
	
	Текст = СтрЗаменить(Текст, ": ложь", ": false");
	Текст = СтрЗаменить(Текст, ":ложь", ": false");
	Текст = СтрЗаменить(Текст, ": ""ложь""", ": false");
	Текст = СтрЗаменить(Текст, ":""ложь""", ": false");
	
	// Удаляем BOM и управляющие символы (могут ломать ПрочитатьJSON с ошибкой "Недопустимое состояние потока")
	Текст = СтрЗаменить(Текст, Символ(65279), ""); // BOM (U+FEFF)
	Для Код = 0 По 31 Цикл
		Если Код = 9 ИЛИ Код = 10 ИЛИ Код = 13 Тогда
			Продолжить;
		КонецЕсли;
		Текст = СтрЗаменить(Текст, Символ(Код), "");
	КонецЦикла;
	
	Возврат СокрЛП(Текст);
	
КонецФункции

Функция НайтиЗапрещенноеДействиеДляReadOnly(Шаги, ДействияИзменения)
	
	Результат = Новый Структура("Найдено, action", Ложь, "");
	
	Если Шаги = Неопределено Или ТипЗнч(Шаги) <> Тип("Массив") Тогда
		Возврат Результат;
	КонецЕсли;
	
	Для Каждого Шаг Из Шаги Цикл
		Если ТипЗнч(Шаг) = Тип("Структура") И Шаг.Свойство("action") Тогда
			Если ДействияИзменения.Найти(Шаг.action) <> Неопределено Тогда
				Результат.Найдено = Истина;
				Результат.action = Шаг.action;
				Возврат Результат;
			КонецЕсли;
			
			// Рекурсивно проверяем вложенные шаги (ForEach и возможные будущие конструкции)
			Если Шаг.Свойство("steps") Тогда
				РезВлож = НайтиЗапрещенноеДействиеДляReadOnly(Шаг.steps, ДействияИзменения);
				Если РезВлож.Найдено Тогда
					Возврат РезВлож;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

// Проверяет DSL JSON
//
// Параметры:
//  DSLJSON - Строка - JSON с DSL командами
//
// Возвращаемое значение:
//  Структура - структура результата:
//   * Успех - Булево - успешность проверки
//   * Сообщение - Строка - описание ошибки или пусто
//   * Сценарий - Структура - распарсенный сценарий (если успешно)
//
Функция ПроверитьDSL(DSLJSON) Экспорт
	
	Результат = Новый Структура;
	Результат.Вставить("Успех", Ложь);
	Результат.Вставить("Сообщение", "");
	Результат.Вставить("Сценарий", Неопределено);
	Результат.Вставить("КодОшибки", "");
	Результат.Вставить("КонтекстОшибки", Неопределено);
	
	// Проверяем, что JSON не пустой
	Если ПустаяСтрока(DSLJSON) Тогда
		Результат.Сообщение = "DSL JSON пуст";
		Результат.КодОшибки = "empty_dsl";
		Возврат Результат;
	КонецЕсли;
	
	// Парсим JSON
	Попытка
		
		ЧистыйJSON = НормализоватьJSONТекст(DSLJSON);
		Если ПустаяСтрока(ЧистыйJSON) Тогда
			Результат.Сообщение = "Не удалось выделить JSON объект из ответа";
			Результат.КодОшибки = "invalid_json";
			Возврат Результат;
		КонецЕсли;
		
		ЧтениеJSON = Новый ЧтениеJSON;
		ЧтениеJSON.УстановитьСтроку(ЧистыйJSON);
		Сценарий = ПрочитатьJSON(ЧтениеJSON);
		ЧтениеJSON.Закрыть();
		
	Исключение
		
		ТекстОшибки = ОписаниеОшибки();
		// Проверяем на наличие признаков использования кода в JSON
		Если СтрНайти(DSLJSON, " + ") > 0 ИЛИ СтрНайти(DSLJSON, "(") > 0 И СтрНайти(DSLJSON, ")") > 0 Тогда
			ТекстОшибки = ТекстОшибки + Символы.ПС + "ВЕРОЯТНАЯ ПРИЧИНА: Вы использовали конкатенацию строк или вызовы функций внутри JSON. Это ЗАПРЕЩЕНО. Используйте валидный JSON. Если нужны данные из предыдущего шага, сначала выполните его, дождитесь ответа системы, а затем используйте результат во втором шаге.";
		КонецЕсли;
		
		Результат.Сообщение = "Ошибка парсинга JSON: " + ТекстОшибки;
		Результат.КодОшибки = "invalid_json";
		Возврат Результат;
		
	КонецПопытки;
	
	// Проверяем структуру сценария
	Если ТипЗнч(Сценарий) <> Тип("Структура") Тогда
		Результат.Сообщение = "Сценарий должен быть объектом JSON";
		Результат.КодОшибки = "invalid_schema";
		Возврат Результат;
	КонецЕсли;
	
	// Нормализуем частые вариации, чтобы не падать на "args/params/parameters"
	// и на объектные имена вида "Справочник.Контрагенты".
	Если Сценарий.Свойство("steps") И ТипЗнч(Сценарий.steps) = Тип("Массив") Тогда
		Для ИндексНорм = 0 По Сценарий.steps.Количество() - 1 Цикл
			ШагНорм = Сценарий.steps[ИндексНорм];
			Если ТипЗнч(ШагНорм) <> Тип("Структура") Тогда
				Продолжить;
			КонецЕсли;
			
			// 1) Переносим вложенные параметры наверх
			Если ШагНорм.Свойство("args") И ТипЗнч(ШагНорм.args) = Тип("Структура") Тогда
				Для Каждого Пара Из ШагНорм.args Цикл
					Если НЕ ШагНорм.Свойство(Пара.Ключ) Тогда
						ШагНорм.Вставить(Пара.Ключ, Пара.Значение);
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
			
			Если ШагНорм.Свойство("params") И ТипЗнч(ШагНорм.params) = Тип("Структура") Тогда
				Для Каждого Пара Из ШагНорм.params Цикл
					Если НЕ ШагНорм.Свойство(Пара.Ключ) Тогда
						ШагНорм.Вставить(Пара.Ключ, Пара.Значение);
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
			
			Если ШагНорм.Свойство("parameters") И ТипЗнч(ШагНорм.parameters) = Тип("Структура") Тогда
				Для Каждого Пара Из ШагНорм.parameters Цикл
					Если НЕ ШагНорм.Свойство(Пара.Ключ) Тогда
						ШагНорм.Вставить(Пара.Ключ, Пара.Значение);
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
			
			// 2) Нормализуем objectName (camelCase) -> object_name
			Если ШагНорм.Свойство("objectName") И НЕ ШагНорм.Свойство("object_name") Тогда
				ШагНорм.Вставить("object_name", ШагНорм.objectName);
			КонецЕсли;
			
			// 3) Нормализуем fields -> data для CreateReference/CreateDocument (LLM часто использует fields, код ожидает data)
			Если ШагНорм.Свойство("action") Тогда
				Действие = Строка(ШагНорм.action);
				Если (ВРег(Действие) = "CREATEREFERENCE" ИЛИ ВРег(Действие) = "CREATEDOCUMENT") И ШагНорм.Свойство("fields") И ТипЗнч(ШагНорм.fields) = Тип("Структура") И НЕ ШагНорм.Свойство("data") Тогда
					ШагНорм.Вставить("data", ШагНорм.fields);
				КонецЕсли;
			КонецЕсли;
			
			// 3a) Нормализуем name -> data.Наименование для CreateReference (LLM часто использует name)
			Если ШагНорм.Свойство("action") Тогда
				Действие = Строка(ШагНорм.action);
				Если (ВРег(Действие) = "CREATEREFERENCE" ИЛИ ВРег(Действие) = "CREATEDOCUMENT") И ШагНорм.Свойство("name") И ТипЗнч(ШагНорм.name) = Тип("Строка") Тогда
					Если НЕ ШагНорм.Свойство("data") Или ТипЗнч(ШагНорм.data) <> Тип("Структура") Тогда
						ШагНорм.Вставить("data", Новый Структура);
					КонецЕсли;
					Если НЕ ШагНорм.data.Свойство("Наименование") Или ПустаяСтрока(Строка(ШагНорм.data.Наименование)) Тогда
						ШагНорм.data.Вставить("Наименование", ШагНорм.name);
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
			
			// 4) Нормализуем object_name "Справочник.Контрагенты" -> object_type/object_name
			Если ШагНорм.Свойство("action") Тогда
				Действие = Строка(ШагНорм.action);
				ДействияСОбъектом = "CHECKOBJECTEXISTS,GETOBJECTFIELDS,CREATEREFERENCE,CREATEDOCUMENT,FINDREFERENCEBYNAME,FINDREFERENCEBYGUID,SELECTOBJECT";
				Если СтрНайти(ДействияСОбъектом, ВРег(Действие)) > 0 И ШагНорм.Свойство("object_name") Тогда
					ИмяОбъекта = Строка(ШагНорм.object_name);
					Если СтрНайти(ИмяОбъекта, ".") > 0 Тогда
						Части = СтрРазделить(ИмяОбъекта, ".");
						Если Части.Количество() = 2 Тогда
							Если НЕ ШагНорм.Свойство("object_type") Тогда
								ШагНорм.Вставить("object_type", Части[0]);
							КонецЕсли;
							ШагНорм.object_name = Части[1];
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
			
		КонецЦикла;
	КонецЕсли;
	
	// Версию DSL (dsl_version) НЕ делаем обязательной:
	// - если поле отсутствует, продолжаем проверку по steps
	// - если поле есть, не блокируем выполнение (для обратной совместимости)
	Если НЕ Сценарий.Свойство("dsl_version") Тогда
		// Нормализуем для последующей обработки/логов
		Сценарий.Вставить("dsl_version", 1);
	КонецЕсли;
	
	// Проверяем наличие steps
	Если НЕ Сценарий.Свойство("steps") Тогда
		Результат.Сообщение = "Отсутствует поле steps";
		Результат.КодОшибки = "missing_field";
		Результат.КонтекстОшибки = Новый Структура("field", "steps");
		Возврат Результат;
	КонецЕсли;
	
	Если ТипЗнч(Сценарий.steps) <> Тип("Массив") Тогда
		Результат.Сообщение = "steps должен быть массивом";
		Результат.КодОшибки = "invalid_field_type";
		Результат.КонтекстОшибки = Новый Структура("field, expected", "steps", "array");
		Возврат Результат;
	КонецЕсли;
	
	Если Сценарий.steps.Количество() = 0 Тогда
		Результат.Сообщение = "Массив steps пуст";
		Результат.КодОшибки = "empty_steps";
		Возврат Результат;
	КонецЕсли;
	
	// Проверяем каждый шаг
	Для Индекс = 0 По Сценарий.steps.Количество() - 1 Цикл
		
		Шаг = Сценарий.steps[Индекс];
		
		Если ТипЗнч(Шаг) <> Тип("Структура") Тогда
			Результат.Сообщение = "Шаг " + Формат(Индекс + 1, "ЧН=0") + " должен быть объектом";
			Результат.КодОшибки = "invalid_step";
			Результат.КонтекстОшибки = Новый Структура("step_index", Индекс + 1);
			Возврат Результат;
		КонецЕсли;
		
		Если НЕ Шаг.Свойство("action") Тогда
			Результат.Сообщение = "Шаг " + Формат(Индекс + 1, "ЧН=0") + ": отсутствует поле action";
			Результат.КодОшибки = "missing_field";
			Результат.КонтекстОшибки = Новый Структура("step_index, field", Индекс + 1, "action");
			Возврат Результат;
		КонецЕсли;
		
		Если ТипЗнч(Шаг.action) <> Тип("Строка") Тогда
			Результат.Сообщение = "Шаг " + Формат(Индекс + 1, "ЧН=0") + ": action должен быть строкой";
			Результат.КодОшибки = "invalid_field_type";
			Результат.КонтекстОшибки = Новый Структура("step_index, field, expected", Индекс + 1, "action", "string");
			Возврат Результат;
		КонецЕсли;
		
		// Проверяем, что action в белом списке
		Если НЕ РазрешенныеДействия().Найти(Шаг.action) <> Неопределено Тогда
			Результат.Сообщение = "Шаг " + Формат(Индекс + 1, "ЧН=0") + ": неизвестное действие '" + Шаг.action + "'";
			Результат.КодОшибки = "unknown_action";
			Результат.КонтекстОшибки = Новый Структура("step_index, action", Индекс + 1, Шаг.action);
			Возврат Результат;
		КонецЕсли;
		
		// Валидация конкретных действий
		РезультатВалидации = ВалидироватьШаг(Шаг, Индекс + 1);
		Если НЕ РезультатВалидации.Успех Тогда
			Результат.Сообщение = РезультатВалидации.Сообщение;
			Результат.КодОшибки = "invalid_step";
			Результат.КонтекстОшибки = Новый Структура("step_index, action", Индекс + 1, Шаг.action);
			Возврат Результат;
		КонецЕсли;
		
	КонецЦикла;
	
	// Все проверки пройдены
	Результат.Успех = Истина;
	Результат.Сценарий = Сценарий;
	
	Возврат Результат;
	
КонецФункции

// Выполняет DSL команды
//
// Параметры:
//  DSLJSON - Строка - JSON с DSL командами
//  СсылкаДиалога - СправочникСсылка.ИИА_Диалоги - ссылка на диалог (опционально, для доступа к табличной части)
//  ТолькоЧтение - Булево - если Истина, запрещены действия изменения данных
//
// Возвращаемое значение:
//  Структура - структура результата:
//   * Успех - Булево - успешность выполнения
//   * Сообщение - Строка - описание ошибки или пусто
//   * Результаты - Массив - массив результатов выполнения шагов
//
Функция ВыполнитьDSL(DSLJSON, СсылкаДиалога = Неопределено, ТолькоЧтение = Ложь) Экспорт
	
	Результат = Новый Структура;
	Результат.Вставить("Успех", Ложь);
	Результат.Вставить("Сообщение", "");
	Результат.Вставить("Результаты", Новый Массив);
	Результат.Вставить("СсылкиОбъектов", Новый Массив);
	Результат.Вставить("СистемныйОтвет", "");
	
	СистемныйРезультат = Новый Структура;
	СистемныйРезультат.Вставить("kind", "dsl_system_result");
	СистемныйРезультат.Вставить("schema_version", 1);
	СистемныйРезультат.Вставить("success", Ложь);
	СистемныйРезультат.Вставить("error", Неопределено);
	СистемныйРезультат.Вставить("error_code", "");
	СистемныйРезультат.Вставить("error_context", Неопределено);
	СистемныеШаги = Новый Массив;
	СистемныеИзмененныеОбъекты = Новый Массив;
	СистемныеЗапросы = Новый Массив;
	СистемныйРезультат.Вставить("steps", СистемныеШаги);
	СистемныйРезультат.Вставить("changed_objects", СистемныеИзмененныеОбъекты);
	СистемныйРезультат.Вставить("run_query", СистемныеЗапросы);
	
	// Сначала проверяем DSL
	РезультатПроверки = ПроверитьDSL(DSLJSON);
	
	Если НЕ РезультатПроверки.Успех Тогда
		Результат.Сообщение = РезультатПроверки.Сообщение;
		СистемныйРезультат.error = "Ошибка проверки DSL: " + РезультатПроверки.Сообщение;
		Если РезультатПроверки.Свойство("КодОшибки") Тогда
			СистемныйРезультат.error_code = РезультатПроверки.КодОшибки;
		КонецЕсли;
		Если РезультатПроверки.Свойство("КонтекстОшибки") Тогда
			СистемныйРезультат.error_context = РезультатПроверки.КонтекстОшибки;
		КонецЕсли;
		Результат.СистемныйОтвет = СформироватьJSONСистемногоОтвета(СистемныйРезультат);
		Возврат Результат;
	КонецЕсли;
	
	Сценарий = РезультатПроверки.Сценарий;
	
	// Если включен режим только чтение, проверяем наличие запрещенных действий
	Если ТолькоЧтение Тогда
		ДействияИзменения = ПолучитьДействияИзменения();
		Нарушение = НайтиЗапрещенноеДействиеДляReadOnly(Сценарий.steps, ДействияИзменения);
		Если Нарушение.Найдено Тогда
			Результат.Сообщение = "Ошибка: Действие '" + Нарушение.action + "' запрещено в режиме 'Только чтение' (диалог типа 'Запрос1С').";
			СистемныйРезультат.error = Результат.Сообщение;
			СистемныйРезультат.error_code = "read_only_violation";
			СистемныйРезультат.error_context = Новый Структура("action", Нарушение.action);
			Результат.СистемныйОтвет = СформироватьJSONСистемногоОтвета(СистемныйРезультат);
			Возврат Результат;
		КонецЕсли;
	КонецЕсли;
	
	// Создаем контекст выполнения
	КонтекстВыполнения = Новый Структура;
	
	// Добавляем ссылку на диалог в контекст, если она передана
	Если ЗначениеЗаполнено(СсылкаДиалога) Тогда
		КонтекстВыполнения.Вставить("СсылкаДиалога", СсылкаДиалога);
		
		// Переносим дополнительные свойства диалога в контекст выполнения
		ДиалогОбъект = СсылкаДиалога.ПолучитьОбъект();
		Для Каждого КлючЗначение Из ДиалогОбъект.ДополнительныеСвойства Цикл
			КонтекстВыполнения.Вставить(КлючЗначение.Ключ, КлючЗначение.Значение);
		КонецЦикла;
		
		// Восстанавливаем контекст DSL из регистра (для связи между вызовами)
		СтруктураДанных = ИИА_Сервер.ПолучитьДанныеДиалогаИзРегистра(СсылкаДиалога);
		Если СтруктураДанных <> Неопределено И ТипЗнч(СтруктураДанных) = Тип("Структура")
			И СтруктураДанных.Свойство("DSL_СсылкаОбъекта")
			И ЗначениеЗаполнено(СтруктураДанных.DSL_СсылкаОбъекта) Тогда
			
			СсылкаОбъекта = СтруктураДанных.DSL_СсылкаОбъекта;
			Попытка
				Объект = СсылкаОбъекта.ПолучитьОбъект();
				Если Объект <> Неопределено Тогда
					КонтекстВыполнения.Вставить("ТекущийОбъект", Объект);
					КонтекстВыполнения.Вставить("СсылкаОбъекта", СсылкаОбъекта);
					Если СтруктураДанных.Свойство("DSL_ТипОбъекта") Тогда
						КонтекстВыполнения.Вставить("ТипОбъекта", СтруктураДанных.DSL_ТипОбъекта);
					КонецЕсли;
					Если СтруктураДанных.Свойство("DSL_ИмяОбъекта") Тогда
						КонтекстВыполнения.Вставить("ИмяОбъекта", СтруктураДанных.DSL_ИмяОбъекта);
					КонецЕсли;
					ТипОбъекта = ?(КонтекстВыполнения.Свойство("ТипОбъекта"), КонтекстВыполнения.ТипОбъекта, "");
					ИмяОбъекта = ?(КонтекстВыполнения.Свойство("ИмяОбъекта"), КонтекстВыполнения.ИмяОбъекта, СсылкаОбъекта.Метаданные().Имя);
					УстановитьDSLКонтекстОбъекта(КонтекстВыполнения, ТипОбъекта, ИмяОбъекта, Объект, Ложь);
				КонецЕсли;
			Исключение
				// Объект мог быть удалён — игнорируем, контекст останется пустым
			КонецПопытки;
		КонецЕсли;
	КонецЕсли;
	
	// Флаг для отслеживания, был ли выполнен шаг Write
	БылВыполненWrite = Ложь;
	
	// Выполняем шаги
	// Для логов/контекста достаточно sample, полные данные передаются отдельно для ТабличногоДокумента
	ЛимитСтрокЗапроса = 5;
	Для Индекс = 0 По Сценарий.steps.Количество() - 1 Цикл
		
		Шаг = Сценарий.steps[Индекс];
		
		//@skip-check query-in-loop
		РезультатШага = ВыполнитьШаг(Шаг, КонтекстВыполнения);
		Результат.Результаты.Добавить(РезультатШага);
		
		СистемныйШаг = Новый Структура;
		СистемныйШаг.Вставить("index", Индекс + 1);
		СистемныйШаг.Вставить("action", Шаг.action);
		СистемныйШаг.Вставить("success", РезультатШага.Успех);
		СистемныйШаг.Вставить("message", РезультатШага.Сообщение);
		
		Если Шаг.action = "RunQuery" Тогда
			ДеталиШага = Новый Структура;
			ДанныеЗапроса = СформироватьРезультатRunQuery(РезультатШага, ЛимитСтрокЗапроса);
			
			// Добавляем текст запроса (обрезанный) и признаки нормализации, если доступны
			Если РезультатШага.Свойство("ExecutedQuery") И НЕ ПустаяСтрока(Строка(РезультатШага.ExecutedQuery)) Тогда
				ТекстЗапросаДляЛога = Строка(РезультатШага.ExecutedQuery);
				ЗапросОбрезан = Ложь;
				Если СтрДлина(ТекстЗапросаДляЛога) > 800 Тогда
					ТекстЗапросаДляЛога = Лев(ТекстЗапросаДляЛога, 800);
					ЗапросОбрезан = Истина;
				КонецЕсли;
				ДанныеЗапроса.Вставить("query", ТекстЗапросаДляЛога);
				ДанныеЗапроса.Вставить("query_truncated", ЗапросОбрезан);
			КонецЕсли;
			Если РезультатШага.Свойство("QueryNormalized") Тогда
				ДанныеЗапроса.Вставить("query_normalized", РезультатШага.QueryNormalized);
			КонецЕсли;
			
			ДеталиШага.Вставить("run_query", ДанныеЗапроса);
			СистемныйШаг.Вставить("details", ДеталиШага);
			СистемныеЗапросы.Добавить(ДанныеЗапроса);
		КонецЕсли;
		
		СистемныеШаги.Добавить(СистемныйШаг);
		
		// Если это RunQuery, сохраняем данные запроса в результат DSL для создания табличного документа на клиенте
		Если Шаг.action = "RunQuery" И РезультатШага.Свойство("ДанныеЗапросаДляТаблицы") Тогда
			Результат.Вставить("ДанныеЗапросаДляТаблицы", РезультатШага.ДанныеЗапросаДляТаблицы);
			// Также устанавливаем флаг для автоматического открытия табличного документа
			Результат.Вставить("ОткрытьТабличныйДокумент", Истина);
		КонецЕсли;
		
		// Отслеживаем выполнение Write
		Если Шаг.action = "Write" Тогда
			БылВыполненWrite = Истина;
			ДобавитьЗаписьИзмененногоОбъекта(КонтекстВыполнения, СистемныеИзмененныеОбъекты, "explicit", РезультатШага);
		КонецЕсли;
		
		// Если шаг завершился с ошибкой, останавливаем выполнение
		Если НЕ РезультатШага.Успех Тогда
			Результат.Сообщение = "Ошибка выполнения шага '" + Шаг.action + "': " + РезультатШага.Сообщение;
			СистемныйРезультат.error = Результат.Сообщение;
			СистемныйРезультат.error_code = "step_failed";
			СистемныйРезультат.error_context = Новый Структура("step_index, action", Индекс + 1, Шаг.action);
			Результат.СистемныйОтвет = СформироватьJSONСистемногоОтвета(СистемныйРезультат);
			Возврат Результат;
		КонецЕсли;

		// Сохраняем ссылку в массиве всех ссылок (для возврата на клиент)
		Если КонтекстВыполнения.Свойство("СсылкаОбъекта") И ЗначениеЗаполнено(КонтекстВыполнения.СсылкаОбъекта) Тогда
			СсылкаОбъекта = КонтекстВыполнения.СсылкаОбъекта;
			
			// Проверяем, что такой ссылки еще нет в массиве
			Найдено = Ложь;
			Для Каждого СуществующаяСсылка Из Результат.СсылкиОбъектов Цикл
				Если СуществующаяСсылка = СсылкаОбъекта Тогда
					Найдено = Истина;
					Прервать;
				КонецЕсли;
			КонецЦикла;
			
			Если НЕ Найдено Тогда
				Результат.СсылкиОбъектов.Добавить(СсылкаОбъекта);
			КонецЕсли;
		КонецЕсли;
		
	КонецЦикла;
	
	// Если был создан объект, но не был выполнен Write, записываем автоматически
	Если НЕ БылВыполненWrite И КонтекстВыполнения.Свойство("ТекущийОбъект") Тогда
		
		ТекущийОбъект = КонтекстВыполнения.ТекущийОбъект;
		ТипОбъекта = "";
		Если КонтекстВыполнения.Свойство("ТипОбъекта") Тогда
			ТипОбъекта = КонтекстВыполнения.ТипОбъекта;
		КонецЕсли;
		
		// Записываем объект, если это справочник или документ
		Если ТипОбъекта = "Справочник" Или ТипОбъекта = "Документ" Тогда
			
			Попытка
				
				// Пытаемся записать объект
				// Если объект уже записан, метод Записать() просто обновит его
				Если ТипОбъекта = "Справочник" Тогда
					ТекущийОбъект.Записать();
				Иначе
					// Для документов можно указать режим записи
					ТекущийОбъект.Записать();
				КонецЕсли;
				
				РезультатАвтозаписи = Новый Структура;
				РезультатАвтозаписи.Вставить("Успех", Истина);
				РезультатАвтозаписи.Вставить("Сообщение", "Объект автоматически записан");
				
				// Получаем ссылку после записи
				Попытка
					СсылкаОбъекта = ТекущийОбъект.Ссылка;
					РезультатАвтозаписи.Вставить("Данные", СсылкаОбъекта);
					// Сохраняем ссылку в массив всех ссылок (если она валидна)
					Если ЗначениеЗаполнено(СсылкаОбъекта) Тогда
						Попытка
							// Проверяем тип ссылки
							ТипСсылки = ТипЗнч(СсылкаОбъекта);
							СтрокаТипа = Строка(ТипСсылки);
							// Проверяем, является ли это ссылкой на справочник или документ
							Если СтрНайти(СтрокаТипа, "СправочникСсылка") > 0 Или СтрНайти(СтрокаТипа, "ДокументСсылка") > 0 Тогда
								// Проверяем, что такой ссылки еще нет в массиве
								Найдено = Ложь;
								Для Каждого СуществующаяСсылка Из Результат.СсылкиОбъектов Цикл
									Попытка
										Если СуществующаяСсылка = СсылкаОбъекта Тогда
											Найдено = Истина;
											Прервать;
										КонецЕсли;
								Исключение
									// Игнорируем ошибки сравнения
									ТекстОшибки = ОписаниеОшибки();
								КонецПопытки;
								КонецЦикла;
								Если НЕ Найдено Тогда
									Результат.СсылкиОбъектов.Добавить(СсылкаОбъекта);
								КонецЕсли;
							Иначе
								// Если тип не распознан, все равно пытаемся добавить (на случай нестандартных типов)
								Результат.СсылкиОбъектов.Добавить(СсылкаОбъекта);
							КонецЕсли;
						Исключение
							// Если не удалось проверить тип, все равно пытаемся добавить
							Результат.СсылкиОбъектов.Добавить(СсылкаОбъекта);
						КонецПопытки;
					КонецЕсли;
				Исключение
					РезультатАвтозаписи.Вставить("Данные", Неопределено);
				КонецПопытки;
				
				Результат.Результаты.Добавить(РезультатАвтозаписи);
				ДобавитьЗаписьИзмененногоОбъекта(КонтекстВыполнения, СистемныеИзмененныеОбъекты, "auto", РезультатАвтозаписи);
				
			Исключение
				
				// Если не удалось записать автоматически, добавляем информацию об ошибке
				РезультатОшибки = Новый Структура;
				РезультатОшибки.Вставить("Успех", Ложь);
				РезультатОшибки.Вставить("Сообщение", "Ошибка автоматической записи объекта: " + ОписаниеОшибки());
				РезультатОшибки.Вставить("Данные", Неопределено);
				Результат.Результаты.Добавить(РезультатОшибки);
				ДобавитьЗаписьИзмененногоОбъекта(КонтекстВыполнения, СистемныеИзмененныеОбъекты, "auto", РезультатОшибки);
				
			КонецПопытки;
			
		КонецЕсли;
		
	КонецЕсли;
	
	// Собираем все ссылки на объекты из результатов шагов
	Для Каждого РезультатШага Из Результат.Результаты Цикл
		Если РезультатШага.Свойство("Данные") И ЗначениеЗаполнено(РезультатШага.Данные) Тогда
			
			ДанныеШага = РезультатШага.Данные;
			МассивДанных = Новый Массив;
			
			Если ТипЗнч(ДанныеШага) = Тип("Массив") Тогда
				МассивДанных = ДанныеШага;
			Иначе
				МассивДанных.Добавить(ДанныеШага);
			КонецЕсли;
			
			Для Каждого ЭлементДанных Из МассивДанных Цикл
				
				Если НЕ ЗначениеЗаполнено(ЭлементДанных) Тогда
					Продолжить;
				КонецЕсли;
				
				ТипДанных = ТипЗнч(ЭлементДанных);
				СтрокаТипа = Строка(ТипДанных);
				// Проверяем, является ли это ссылкой на справочник или документ
				Если СтрНайти(СтрокаТипа, "СправочникСсылка") > 0 Или СтрНайти(СтрокаТипа, "ДокументСсылка") > 0 Тогда
					// Проверяем, что такой ссылки еще нет в массиве
					Найдено = Ложь;
					Для Каждого СуществующаяСсылка Из Результат.СсылкиОбъектов Цикл
						Если СуществующаяСсылка = ЭлементДанных Тогда
							Найдено = Истина;
							Прервать;
						КонецЕсли;
					КонецЦикла;
					Если НЕ Найдено Тогда
						Результат.СсылкиОбъектов.Добавить(ЭлементДанных);
					КонецЕсли;
				КонецЕсли;
				
			КонецЦикла;
			
		КонецЕсли;
	КонецЦикла;
	
	// Сохраняем контекст DSL в регистр для следующего вызова
	Если ЗначениеЗаполнено(СсылкаДиалога)
		И КонтекстВыполнения.Свойство("СсылкаОбъекта")
		И ЗначениеЗаполнено(КонтекстВыполнения.СсылкаОбъекта) Тогда
		
		СтруктураДанных = ИИА_Сервер.ПолучитьДанныеДиалогаИзРегистра(СсылкаДиалога);
		Если СтруктураДанных = Неопределено ИЛИ ТипЗнч(СтруктураДанных) <> Тип("Структура") Тогда
			СтруктураДанных = Новый Структура;
		Иначе
			Копия = Новый Структура;
			Для Каждого КлючЗначение Из СтруктураДанных Цикл
				Копия.Вставить(КлючЗначение.Ключ, КлючЗначение.Значение);
			КонецЦикла;
			СтруктураДанных = Копия;
		КонецЕсли;
		
		СтруктураДанных.Вставить("DSL_СсылкаОбъекта", КонтекстВыполнения.СсылкаОбъекта);
		Если КонтекстВыполнения.Свойство("ТипОбъекта") Тогда
			СтруктураДанных.Вставить("DSL_ТипОбъекта", КонтекстВыполнения.ТипОбъекта);
		КонецЕсли;
		Если КонтекстВыполнения.Свойство("ИмяОбъекта") Тогда
			СтруктураДанных.Вставить("DSL_ИмяОбъекта", КонтекстВыполнения.ИмяОбъекта);
		КонецЕсли;
		
		ИИА_Сервер.ЗаписатьДанныеДиалогаВРегистр(СсылкаДиалога, СтруктураДанных);
	КонецЕсли;
	
	Результат.Успех = Истина;
	СистемныйРезультат.success = Истина;
	Результат.Вставить("СистемныйОтвет", СформироватьJSONСистемногоОтвета(СистемныйРезультат));
	
