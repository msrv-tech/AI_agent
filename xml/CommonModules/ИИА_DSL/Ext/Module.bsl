		Возврат "{""kind"":""dsl_system_result"",""schema_version"":1,""success"":false,""error"":""Ошибка сериализации JSON: " + ТекстОшибки + """}";
	КонецПопытки;
	
КонецФункции

Функция СериализоватьДляJSON(Значение)
	
	Если Значение = Неопределено Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	ТипЗначения = ТипЗнч(Значение);
	
	Если ТипЗначения = Тип("Строка") Или 
	   ТипЗначения = Тип("Число") Или
	   ТипЗначения = Тип("Булево") Тогда
		Возврат Значение;
	КонецЕсли;
	
	Если ТипЗначения = Тип("Дата") Тогда
		Возврат Формат(Значение, "ДФ=yyyy-MM-ddTHH:mm:ss");
	КонецЕсли;
	
	Если ТипЗначения = Тип("Массив") Тогда
		НовыйМассив = Новый Массив;
		Для Каждого Элемент Из Значение Цикл
			НовыйМассив.Добавить(СериализоватьДляJSON(Элемент));
		КонецЦикла;
		Возврат НовыйМассив;
	КонецЕсли;
	
	Если ТипЗначения = Тип("Структура") Тогда
		НоваяСтруктура = Новый Структура;
		Для Каждого ПараКлючЗначение Из Значение Цикл
			НоваяСтруктура.Вставить(ПараКлючЗначение.Ключ, СериализоватьДляJSON(ПараКлючЗначение.Значение));
		КонецЦикла;
		Возврат НоваяСтруктура;
	КонецЕсли;
	
	// Ссылочные типы
	Если (Справочники.ТипВсеСсылки().СодержитТип(ТипЗначения) 
		Или Документы.ТипВсеСсылки().СодержитТип(ТипЗначения)
		Или ПланыВидовХарактеристик.ТипВсеСсылки().СодержитТип(ТипЗначения)) Тогда
		
		СтруктураСсылки = Новый Структура;
		СтруктураСсылки.Вставить("ref", Строка(Значение));
		
		Попытка
			СтруктураСсылки.Вставить("guid", Строка(Значение.УникальныйИдентификатор()));
		Исключение
			СтруктураСсылки.Вставить("guid", "");
		КонецПопытки;
		
		Попытка
			СтруктураСсылки.Вставить("meta_name", Значение.Метаданные().Имя);
		Исключение
			СтруктураСсылки.Вставить("meta_name", "");
		КонецПопытки;
		
		Возврат СтруктураСсылки;
	КонецЕсли;
	
	Возврат Строка(Значение);
	
КонецФункции

Функция СформироватьРезультатRunQuery(РезультатШага, ЛимитСтрок)
	
	ДанныеЗапроса = Новый Структура;
	Колонки = Новый Массив;
	Строки = Новый Массив;
	КоличествоСтрок = 0;
	
	Если РезультатШага.Свойство("КолонкиЗапроса") Тогда
		Колонки = РезультатШага.КолонкиЗапроса;
	КонецЕсли;
	
	Если РезультатШага.Свойство("Данные") И ТипЗнч(РезультатШага.Данные) = Тип("Массив") Тогда
		КоличествоСтрок = РезультатШага.Данные.Количество();
		
		МаксСтрок = ЛимитСтрок;
		Если КоличествоСтрок < МаксСтрок Тогда
			МаксСтрок = КоличествоСтрок;
		КонецЕсли;
		
		Для Индекс = 0 По МаксСтрок - 1 Цикл
			СтрокаДанных = РезультатШага.Данные[Индекс];
			Если ТипЗнч(СтрокаДанных) = Тип("Структура") Тогда
				СтруктураСтроки = Новый Структура;
				Для Каждого ПараКлючЗначение Из СтрокаДанных Цикл
					СтруктураСтроки.Вставить(ПараКлючЗначение.Ключ, СериализоватьДляJSON(ПараКлючЗначение.Значение));
				КонецЦикла;
				Строки.Добавить(СтруктураСтроки);
			Иначе
				Строки.Добавить(СериализоватьДляJSON(СтрокаДанных));
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	ДанныеЗапроса.Вставить("row_count", КоличествоСтрок);
	ДанныеЗапроса.Вставить("truncated", КоличествоСтрок > ЛимитСтрок);
	ДанныеЗапроса.Вставить("rows_limit", ЛимитСтрок);
	ДанныеЗапроса.Вставить("columns", Колонки);
	ДанныеЗапроса.Вставить("rows", Строки);
	
	Возврат ДанныеЗапроса;
	
КонецФункции

