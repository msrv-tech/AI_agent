// Ищет похожие объекты в метаданных (fuzzy search с использованием расстояния Левенштейна)
//
// Параметры:
//  ИмяДляПоиска - Строка - имя или часть имени объекта
//  ТипМетаданных - Строка - "Справочник" или "Документ"
//
// Возвращаемое значение:
//  Массив - массив имен похожих объектов, отсортированный по релевантности
//
Функция НайтиПохожиеОбъекты(ИмяДляПоиска, ТипМетаданных) Экспорт
	
	Результат = Новый Массив;
	СписокСходства = Новый СписокЗначений;
	
	ПоисковыйЗапрос = ВРег(ИмяДляПоиска);
	
	// КАРТА СИНОНИМОВ (для расширения поиска в типовых конфигурациях)
	КартаСинонимов = Новый Соответствие;
	КартаСинонимов.Вставить("РЕАЛИЗАЦИЯ", "РАСХОД,ОТГРУЗКА,ПРОДАЖА");
	КартаСинонимов.Вставить("ПОСТУПЛЕНИЕ", "ПРИХОД,ЗАКУПКА,ПОКУПКА");
	КартаСинонимов.Вставить("КОНТРАГЕНТ", "ПАРТНЕР,КЛИЕНТ,ПОСТАВЩИК");
	КартаСинонимов.Вставить("ТОВАР", "НОМЕНКЛАТУРА,МЦ,ПРОДУКЦИЯ");
	КартаСинонимов.Вставить("ЗАКАЗ", "ЗАЯВКА,СДЕЛКА,ПРОЕКТ");
	КартаСинонимов.Вставить("СЧЕТ", "ОПЛАТА,ИНВОЙС,ПЛАТЕЖ");
	
	МассивЗапросов = Новый Массив;
	МассивЗапросов.Добавить(ПоисковыйЗапрос);
	
	// Добавляем синонимы в поиск, если корень совпадает
	Для Каждого КлючЗначение Из КартаСинонимов Цикл
		Если СтрНайти(ПоисковыйЗапрос, КлючЗначение.Ключ) > 0 Тогда
			МассивСинонимов = СтрРазделить(КлючЗначение.Значение, ",");
			Для Каждого Синоним Из МассивСинонимов Цикл
				Если МассивЗапросов.Найти(Синоним) = Неопределено Тогда
					МассивЗапросов.Добавить(Синоним);
				КонецЕсли;
			КонецЦикла;
		КонецЕсли;
	КонецЦикла;
	
	Коллекция = Неопределено;
	Если ТипМетаданных = "Справочник" Тогда
		Коллекция = Метаданные.Справочники;
	ИначеЕсли ТипМетаданных = "Документ" Тогда
		Коллекция = Метаданные.Документы;
	КонецЕсли;
	
	Если Коллекция <> Неопределено Тогда
		Для Каждого ОбъектМетаданных Из Коллекция Цикл
			
			ИмяОбъекта = ОбъектМетаданных.Имя;
			СинонимОбъекта = ОбъектМетаданных.Синоним;
			ИмяВРег = ВРег(ИмяОбъекта);
			СинонимВРег = ВРег(СинонимОбъекта);
			
			МаксСходствоДляОбъекта = 0;
			
			Для Каждого ТекущийЗапрос Из МассивЗапросов Цикл
				// Вычисляем максимальное сходство (по имени или по синониму)
				СходствоИмя = ВычислитьКоэффициентСходства(ТекущийЗапрос, ИмяВРег);
				СходствоСиноним = ВычислитьКоэффициентСходства(ТекущийЗапрос, СинонимВРег);
				
				ТекущееСходство = Макс(СходствоИмя, СходствоСиноним);
				
				// Повышаем вес при точном вхождении подстроки
				Если СтрНайти(ИмяВРег, ТекущийЗапрос) > 0 ИЛИ СтрНайти(СинонимВРег, ТекущийЗапрос) > 0 Тогда
					ТекущееСходство = Макс(ТекущееСходство, 0.85);
				КонецЕсли;
				
				// Дополнительный бонус за совпадение начала слова
				Если СтрНачинаетсяС(ИмяВРег, ТекущийЗапрос) ИЛИ СтрНачинаетсяС(СинонимВРег, ТекущийЗапрос) Тогда
					ТекущееСходство = Макс(ТекущееСходство, 0.9);
				КонецЕсли;
				
				МаксСходствоДляОбъекта = Макс(МаксСходствоДляОбъекта, ТекущееСходство);
			КонецЦикла;
			
			// Если сходство выше порога
			Если МаксСходствоДляОбъекта > 0.3 Тогда
				// В СписокЗначений.Добавить 4-й параметр - это Картинка, а не Число.
				// Используем Значение для хранения коэффициента сходства.
				СписокСходства.Добавить(МаксСходствоДляОбъекта, ИмяОбъекта);
			КонецЕсли;
			
		КонецЦикла;
	КонецЕсли;
	
	// Сортируем по убыванию сходства (по Значению, где лежит коэффициент)
	СписокСходства.СортироватьПоЗначению(НаправлениеСортировки.Убыв);
	
	Для Каждого Элемент Из СписокСходства Цикл
		// Имя объекта теперь лежит в Представлении
		Результат.Добавить(Элемент.Представление);
		Если Результат.Количество() >= 10 Тогда // Увеличили до 10 для расширенного поиска
			Прервать;
		КонецЕсли;
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

// Вычисляет коэффициент сходства строк (от 0 до 1)
// на основе расстояния Левенштейна
Функция ВычислитьКоэффициентСходства(Строка1, Строка2) Экспорт
	
	Длина1 = СтрДлина(Строка1);
	Длина2 = СтрДлина(Строка2);
	
	Если Длина1 = 0 И Длина2 = 0 Тогда
		Возврат 1;
	ИначеЕсли Длина1 = 0 ИЛИ Длина2 = 0 Тогда
		Возврат 0;
	КонецЕсли;
	
	Расстояние = РасстояниеЛевенштейна(Строка1, Строка2);
	МаксДлина = Макс(Длина1, Длина2);
	
	Возврат (МаксДлина - Расстояние) / МаксДлина;
	
КонецФункции

// Реализация алгоритма Левенштейна (редакторское расстояние)
Функция РасстояниеЛевенштейна(Строка1, Строка2) Экспорт
	
	н_длина = СтрДлина(Строка1);
	м_длина = СтрДлина(Строка2);
	
	Если н_длина = 0 Тогда Возврат м_длина; КонецЕсли;
	Если м_длина = 0 Тогда Возврат н_длина; КонецЕсли;
	
	// Используем одномерный массив для экономии памяти (оптимизация)
	ПредыдущаяСтрока = Новый Массив(м_длина + 1);
	ТекущаяСтрока = Новый Массив(м_длина + 1);
	
	Для ж_инд = 0 По м_длина Цикл
		ПредыдущаяСтрока[ж_инд] = ж_инд;
	КонецЦикла;
	
	Для и_инд = 1 По н_длина Цикл
		ТекущаяСтрока[0] = и_инд;
		Символ1 = Сред(Строка1, и_инд, 1);
		
		Для ж_инд = 1 По м_длина Цикл
			Символ2 = Сред(Строка2, ж_инд, 1);
			СтоимостьЗамены = ?(Символ1 = Символ2, 0, 1);
			
			ТекущаяСтрока[ж_инд] = Мин(
				ТекущаяСтрока[ж_инд-1] + 1,      // Вставка
				ПредыдущаяСтрока[ж_инд] + 1,     // Удаление
				ПредыдущаяСтрока[ж_инд-1] + СтоимостьЗамены // Замена
			);
		КонецЦикла;
		
		// Копируем текущую строку в предыдущую
		Для ж_инд = 0 По м_длина Цикл
			ПредыдущаяСтрока[ж_инд] = ТекущаяСтрока[ж_инд];
		КонецЦикла;
	КонецЦикла;
	
	Возврат ТекущаяСтрока[м_длина];
	
КонецФункции

// Проверяет существование реквизита в справочнике
//
// Параметры:
//  ИмяСправочника - Строка - имя справочника
//  ИмяРеквизита - Строка - имя реквизита
